{%include 'templates/header.tmpl'%}

<div class="container">
    <h4>Пожалуйста, авторизуйтесь</h4>
    <div>
        <form class="form" method="post" action="/?path=auth/login">
            <div class="form-group row">
                <label for="staticEmail" class="col-sm2 col-form-label">E-mail</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="staticEmail" placeholder="E-mail" name="login">
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm2 col-form-label">Пароль</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Пароль" name="password"> 
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Отправить</button>
        </form>
    </div>
</div>

{%include 'templates/footer.tmpl'%}